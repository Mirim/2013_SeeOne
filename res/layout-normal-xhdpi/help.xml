<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <ViewFlipper 
        android:id="@+id/view_flip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img_help1"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img_help2"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img_help3"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             >
            <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img_help4"
           />
            <Button
                android:id="@+id/gamestart"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="400dp"
                android:background="@drawable/img_butstart"
                android:layout_gravity="center_horizontal"
                />
        </FrameLayout>
        
        
    </ViewFlipper>
</LinearLayout>