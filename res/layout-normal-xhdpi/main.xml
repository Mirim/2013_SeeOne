<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_main"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/maindesk"
        android:layout_width="1280dp"
        android:layout_height="280dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/img_maindesk" />

    <ImageView
        android:id="@+id/mainboard"
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:layout_above="@+id/maindesk"
        android:layout_alignRight="@+id/mainflower"
        android:layout_marginRight="130dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/img_mainboard" />

     <ImageView
        android:id="@+id/mainflower"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_alignBottom="@+id/mainboard"
        android:layout_alignRight="@+id/maindesk"
        android:layout_marginRight="180dp"
        android:src="@drawable/img_mainflower" />

    <Button
        android:id="@+id/coffee_start"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/mainboard"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/mainboard"
        android:layout_marginRight="80dp"
        android:background="@drawable/img_mainstart"
        android:onClick="mOnClick" />
    
    <ImageView 
        android:id="@+id/main_anim"
        android:layout_width="150dp"
        android:layout_height="10dp"
        android:layout_alignLeft="@+id/coffee_start"
        android:layout_below="@+id/coffee_start"
        android:background="#00000000"/>

    <Button
        android:id="@+id/coffee_set"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/coffee_start"
        android:layout_marginTop="40dp"
       android:layout_alignLeft="@+id/coffee_start"
       android:layout_marginLeft="30dp"
        android:background="@drawable/img_mainset"
        android:onClick="mOnClick" />

    <ImageView 
        android:id="@+id/main_anim2"
        android:layout_width="150dp"
        android:layout_height="10dp"
        android:layout_alignLeft="@+id/coffee_start"
        android:layout_below="@+id/coffee_set"
        android:background="#00000000"/>
    
    <Button
        android:id="@+id/coffee_help"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/coffee_set"
        android:layout_alignLeft="@+id/coffee_start"
        android:layout_marginLeft="20dp"
		android:layout_marginTop="40dp"
        android:background="@drawable/img_mainhelp"
        android:onClick="mOnClick" />

    <ImageView 
        android:id="@+id/main_anim3"
        android:layout_width="150dp"
        android:layout_height="5dp"
        android:layout_alignLeft="@+id/coffee_start"
        android:layout_below="@+id/coffee_help"
        android:background="#00000000"/>
    
</RelativeLayout>