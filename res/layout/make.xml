<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:src="@drawable/img_maincounter" />

    <Button
        android:id="@+id/aBean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="mOnClick"
        android:text="A원두" />

    <Button
        android:id="@+id/bBean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/aBean"
        android:onClick="mOnClick"
        android:text="B원두" />

    <Button
        android:id="@+id/refrigerator"
        android:layout_width="150dp"
        android:layout_height="226dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/img_refrigerator"
        android:onClick="mOnClick" />

    <Button
        android:id="@+id/openrefrigerator"
        android:layout_width="150dp"
        android:layout_height="226dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/img_openrefrigerator"
        android:onClick="mOnClick" />

    <ImageView
        android:id="@+id/memo"
        android:layout_width="120dp"
        android:layout_height="117dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/img_memo" />
    
    <CheckBox
        android:id="@+id/re_shot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/memo"
        android:text="샷"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"/>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/sideboard"
            android:layout_width="280dp"
            android:layout_height="130dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/img_sideboard"
            android:onClick="mOnClick" />

        <Button
            android:id="@+id/opensideboard"
            android:layout_width="320dp"
            android:layout_height="158dp"
            android:layout_alignTop="@id/sideboard"
            android:layout_marginLeft="5dp"
            android:background="@drawable/img_opensideboard"
            android:onClick="mOnClick" />

        <ImageView
            android:id="@+id/caps"
            android:layout_width="35dp"
            android:layout_height="31dp"
            android:layout_alignBottom="@+id/sideboard"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/cup"
            android:background="@drawable/img_caps" />

        <ImageView
            android:id="@+id/cup"
            android:layout_width="35dp"
            android:layout_height="48dp"
            android:layout_alignBottom="@+id/sideboard"
            android:layout_alignRight="@+id/sideboard"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/img_cup"
            android:onClick="mOnClick" />

        <ImageView
            android:id="@+id/coffeemachine"
            android:layout_width="160dp"
            android:layout_height="102dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/img_coffeemachine" />

        <ImageView
            android:id="@+id/table_cup"
            android:layout_width="35dp"
            android:layout_height="48dp"
            android:layout_alignLeft="@+id/cup"
            android:layout_alignBottom="@+id/coffeemachine"
            android:background="@drawable/img_cup" />

    </RelativeLayout>

    <CheckBox
        android:id="@+id/re_hotw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/re_shot"
        android:layout_below="@+id/re_shot"
        android:text="뜨거운 물" />
    
    <CheckBox
        android:id="@+id/re_mlik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/re_shot"
        android:layout_below="@+id/re_shot"
        android:text="스팀우유" />

    <CheckBox
        android:id="@+id/re_choco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/re_mlik"
        android:layout_below="@+id/re_mlik"
        android:text="초코시럽" />
    
    <CheckBox
        android:id="@+id/re_mlik_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/re_mlik"
        android:layout_below="@+id/re_mlik"
        android:text="우유거품" />
    
    <CheckBox
        android:id="@+id/re_vanilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/re_mlik"
        android:layout_below="@+id/re_mlik"
        android:text="바닐라시럽" />
    
    <CheckBox
        android:id="@+id/re_whipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/re_choco"
        android:layout_below="@+id/re_choco"
        android:text="휘핑크림" />
    
    <CheckBox
        android:id="@+id/re_cinnamon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/re_choco"
        android:layout_below="@+id/re_choco"
        android:text="시나몬 파우더" />
    
    <CheckBox
        android:id="@+id/re_caramel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/re_choco"
        android:layout_below="@+id/re_choco"
        android:text="카라멜 드리즐" />
</RelativeLayout>