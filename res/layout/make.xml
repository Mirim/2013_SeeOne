<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical" >

    <ImageView 
        android:adjustViewBounds="true"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:src="@drawable/img_maincounter"
        android:layout_alignParentBottom="true"/>
    
    <ImageButton
        android:id="@+id/sideboard"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:onClick="mOnClick"
        android:src="@drawable/img_sideboard"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="#00000000"/>

    <ImageButton
        android:id="@+id/opensideboard"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_alignTop="@id/sideboard"
        android:onClick="mOnClick"
        android:src="@drawable/img_opensideboard"
        android:layout_marginLeft="5dp"
        android:background="#00000000"/>

    <Button
        android:id="@+id/aBean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="mOnClick"
        android:text="A원두"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/bBean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/aBean"
        android:layout_centerInParent="true"
        android:onClick="mOnClick"
        android:text="B원두" />

    <ImageButton
        android:id="@+id/refrigerator"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/img_refrigerator"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="mOnClick"/>
    
    <ImageButton
        android:id="@+id/openrefrigerator"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/img_openrefrigerator"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="mOnClick"/>
</RelativeLayout>