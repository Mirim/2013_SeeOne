<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_main"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/maindesk"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/img_maindesk" />

    <ImageView
        android:id="@+id/mainboard"
        android:layout_width="150dp"
        android:layout_height="153dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/mainflower"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_mainboard" />

    <ImageView
        android:id="@+id/mainflower"
        android:layout_width="80dp"
        android:layout_height="98dp"
        android:layout_alignBottom="@+id/mainboard"
        android:layout_alignRight="@+id/maindesk"
        android:layout_marginRight="41dp"
        android:src="@drawable/img_mainflower" />

    <Button
        android:id="@+id/coffee_start"
        android:layout_width="70dp"
        android:layout_height="21dp"
        android:layout_above="@+id/mainflower"
        android:layout_alignRight="@+id/mainboard"
        android:layout_marginRight="35dp"
        android:background="@drawable/img_mainstart"
        android:onClick="mOnClick" />

    <Button
        android:id="@+id/coffee_set"
        android:layout_width="31dp"
        android:layout_height="21dp"
        android:layout_alignRight="@+id/coffee_start"
        android:layout_alignTop="@+id/mainflower"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/img_mainset"
        android:onClick="mOnClick" />

    <Button
        android:id="@+id/coffee_help"
        android:layout_width="45dp"
        android:layout_height="21dp"
        android:layout_alignLeft="@+id/coffee_start"
        android:layout_below="@+id/coffee_set"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/img_mainhelp"
        android:onClick="mOnClick" />

</RelativeLayout>